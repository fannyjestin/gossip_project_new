<%content_for :title, "Gossip" %>

     <section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">Bienvenue sur la page de  <%= params[:user].first_name %> <%= params[:user].last_name %> ! </h1>
          <p class="lead text-muted">Ici, c'est le profil de ce user, c'est stylé nan ?</p>
          <p>
            <a href="#" class="btn btn-primary my-2">Commenter</a>
            <a href="#" class="btn btn-secondary my-2">liker</a>
          </p>
        </div>
      </section>



 <div class="album py-5 bg-light">
        <div class="container">

          <div class="row">
            <div class="col-md-12">
              <div class="card mb-12 box-shadow">
                  <p class="card-text">Informations sur <%= params[:user].first_name %> <%= params[:user].last_name %> <br/>
                    Prénom : <%= params[:user].first_name %> <br/>
                    Nom de Famille : <%= params[:user].last_name %> <br/>
                    Description : <%= params[:user].description %> <br/>
                    Ville : <%=link_to params[:user].city.name, city_path(:id => params[:user].city_id) %> <br/>

                  </p>
                  <div class="d-flex justify-content-between align-items-center">
              </div>
            </div>
          </div>
        </div>


<h5>Tu peux voir  ci-dessous la liste des potins qu'il a crée !</h5>


<div class="row">
  <p> <% params[:user].gossips.each do |gossip|  %> </p>
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <div class="card-body">
                  <p class="card-text"><%= gossip.title %> by <%= gossip.user.first_name %></p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                      <button type="button" class="btn btn-sm btn-outline-secondary">comment</button>
                    </div>
                    <small class="text-muted">crée le : <%= gossip.created_at %></small>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>

