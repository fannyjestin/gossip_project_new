<% content_for :title, "Edit a Comment" %>
<!-- Affichage StylisÃ© du Gossip-->
<% if !@comment.nil? && @comment.errors.any? %>
	<div class="alert alert-danger">
	  <p>We were not able to add your comment for the following reasons :</p>
	  <ul>
	    <% @comment.errors.full_messages.each do |message| %>
	      <li><%= message %></li>
	    <% end %>
	  </ul>
	</div>
<% end %>
<div class ='align-middle'>
	<div class="card mt-5 ml-5 mr-5" style="height:350px">
		<h5 class="card-title ml-5 pt-5 mb-2">Edite ton commentaire !</h5>
	  <div class="card-body">
		<%= form_for [@gossip,@comment] do |f| %>

	<div class=" form-group">
	<label class="card-title">Contenu </label>
	<%=f.text_area :content, :value => @comment.content, class: 'form-control' %>
	</div>
	<div class="form-group">
	    <button type="submit">Modifier ton commentaire </button>
	    <%= link_to 'supprimer', gossip_comment_path(comment_id: @comment.id,id: @gossip.id), class: 'btn btn-danger ml-5', method: :delete%>
	</div>
<% end %>