<%content_for :title, "City" %>


      <section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">Bienvenue sur la page de la Ville <%= @city.name %> !</h1>
          <p class="lead text-muted"> C'est une super ville <%= @city.name %> ! Tu trouves pas ? <br/>
        Tu peux voir  ci-dessous la liste des potin de cette ville !
          </p>
          <p>
            <%= link_to "Créer ton potin", new_gossip_path, :class => "btn btn-secondary my-2" %>
          </p>
        </div>
      </section>


     <div class="album py-5 bg-light">
        <div class="container">
          <div class="row">
  <p> <% @gossips_array.each do |gossip|  %> </p>
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <div class="card-body">
                  <p class="card-text">Gossip : <%= link_to gossip.title , gossip_path(:id => gossip.id) %></p>
                  <div class="d-flex justify-content-between align-items-center">
                      <button type="button" class="btn btn-sm btn-outline-secondary">Publié par : <%= link_to gossip.user.first_name , user_path(:id =>  gossip.user_id) %></button>
                    <small class="text-muted"><%=gossip.created_at%></small>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
    </div>