<%content_for :title, "Gossip project" %>

<% if params[:current_user] %>
 <div class="alert alert-success">
<h2>Bienvenue <%= current_user.first_name %> !</h2>
</div>
<% end %>

<% if params[:notice] %>
 <div class="alert alert-success">
  <strong>Success!</strong> We added your Gossip to the database.
</div>
<% end %>

    <main role="main">

      <section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">Bienvenue à Gossip Project !</h1>

          <p class="lead text-muted">Vous allez trouver ci-dessous la liste des potins déjà crées</p>
          <p>
            <%= link_to "Créer ton potin", new_gossip_path, :class => "btn btn-primary my-2" %>
            <a href="#" class="btn btn-secondary my-2">Abonne toi !</a>
          </p>
        </div>
      </section>

  

      <div class="album py-5 bg-light">
        <div class="container">
          <div class="row">
  <p> <% params[:gossip_array].each do |gossip|  %> </p>
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <div class="card-body">
                  <p class="card-text">Gossip : <%= link_to gossip.title , gossip_path(:id => gossip.id) %></p>
                  <div class="d-flex justify-content-between align-items-center">
                      <button type="button" class="btn btn-sm btn-outline-secondary">Publié par : <%= link_to gossip.user.first_name , user_path(:id =>  gossip.user_id) %></button>
                    <small class="text-muted"><%=gossip.created_at%></small>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
    </div>

</main>

