<%content_for :title, "Gossip" %>

<% if params[:notice] %>
 <div class="alert alert-success">
  <strong>Success!</strong> We added your Gossip to the database.
</div>
<% end %>


      <section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">Bienvenue sur la page du gossip <%= @gossip.title %> !</h1>
          <p class="lead text-muted"> C'est le potin numéro <%= @gossip.id %>, il est chouette nan ??? <br/>
        Tu peux voir  ci-dessous la description du potin en entier !
          </p>
          <p>
            <%= link_to "Créer ton potin", new_gossip_path, :class => "btn btn-secondary my-2" %>
          </p>
        </div>
      </section>


      <div class="album py-5 bg-light">
        <div class="container">

          <div class="row">
            <div class="col-md-12">
              <div class="card mb-12 box-shadow">
                  <p class="card-text center">Titre du potin : <%= @gossip.title %><br/> <br/>
                Contenu du potin : <br/> <%= @gossip.content %> <br/> <br/>
                Publié par : <%= link_to @gossip.user.first_name , user_path(:id => @gossip.user_id ) %> <br/>
              Ville de <%=@gossip.user.first_name %> : 
              <%= link_to @gossip.user.city.name , city_path(:id => @gossip.user.city_id ) %> 
              <br/>

                  </p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group center">
                      <%= link_to "Edit", edit_gossip_path, :class => "btn btn-sm btn-outline-secondary" %>
                    </div>
                     <div class="btn-group center">
                      <%= link_to "Supprimer", gossip_path, :class => "btn btn-sm btn-outline-secondary btn-danger", :data => {:confirm => "Êtes-vous sur?(e)"}, :method => :DELETE %>
                    </div>
                  </div>

</div>
</div>
</div>
</div>
</div>


<h1 class='text-center mt-4 mb-4'>Les commentaires</h1>
<h1 class='text-center mt-2 mb-2'><%= link_to "Ajoute ton commentaire", new_gossip_comment_path(@gossip.id), class: 'btn btn-secondary' %></h1>
<div class='container-fluid'>
  <div class="row">
    <% @comments.each do |comment| %>
      <div class="col-4 col-sm-4 col-md-4 col-lg-4 mt-5 text-center" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title">Commentaire <fieldset></fieldset> publié par : 
              <%= link_to comment.user.first_name , users_path(:id => comment.user.id)%></h5>
        <p class="card-title"><%= comment.created_at.strftime("%d/%m/%Y") %></p>
          <p class="card-title"><%= comment.content %></p>
          <%= link_to "Editer le com", edit_gossip_comment_path(@gossip.id, comment.id), class: 'btn btn-secondary' %>
        </div>
      </div>
    <%end%>
  </div>
</div>


